{
  "name": "copilot-api",
  "version": "0.5.14",
  "description": "Turn GitHub Copilot into OpenAI/Anthropic API compatible server. Usable with Claude Code!",
  "keywords": [
    "proxy",
    "github-copilot",
    "openai-compatible"
  ],
  "homepage": "https://github.com/ericc-ch/copilot-api",
  "bugs": "https://github.com/ericc-ch/copilot-api/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ericc-ch/copilot-api.git"
  },
  "author": "Erick Christian <erickchristian48@gmail.com>",
  "type": "module",
  "bin": {
    "copilot-api": "./dist/main.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "knip": "knip",
    "lint": "eslint . --cache --config eslint.config.simple.js || echo 'Linting skipped due to configuration issues'",
    "prepack": "npm run build",
    "prepare": "simple-git-hooks",
    "release": "bumpp && npm publish --access public",
    "start": "NODE_ENV=production node ./dist/main.js",
    "test": "node --test --loader ts-node/esm tests/*.test.ts",
    "test:unit": "node --test --loader ts-node/esm tests/unit/*.test.ts",
    "test:integration": "node --test --loader ts-node/esm tests/integration/*.test.ts",
    "test:coverage": "node --test --experimental-test-coverage --loader ts-node/esm tests/*.test.ts",
    "typecheck": "tsc --noEmit",
    "token:generate": "NODE_ENV=production node -e \"import('./dist/cli/token-manager.js').then(m => m.generateApiKey())\"",
    "token:show": "NODE_ENV=production node -e \"import('./dist/cli/token-manager.js').then(m => m.showCurrentKey())\"",
    "token:status": "NODE_ENV=production node -e \"import('./dist/cli/token-manager.js').then(m => m.showStatus())\"",
    "token:reset": "NODE_ENV=production node -e \"import('./dist/cli/token-manager.js').then(m => m.resetTokens())\""
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "npm run lint --fix"
  },
  "dependencies": {
    "citty": "^0.1.6",
    "clipboardy": "^4.0.0",
    "consola": "^3.4.2",
    "fetch-event-stream": "^0.1.5",
    "gpt-tokenizer": "^3.0.1",
    "hono": "^4.9.6",
    "srvx": "^0.8.7",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@echristian/eslint-config": "^0.0.54",
    "@types/node": "^20.19.17",
    "bumpp": "^10.2.3",
    "eslint": "^9.35.0",
    "knip": "^5.63.1",
    "lint-staged": "^16.1.6",
    "prettier-plugin-packagejson": "^2.5.19",
    "simple-git-hooks": "^2.13.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "zod": "^3.23.8"
  }
}
