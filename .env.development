# Development environment template
NODE_ENV=development
PORT=3000
HOST=localhost

# GitHub Integration (replace with actual token)
GITHUB_TOKEN=ghp_your_development_token_here

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=text

# Security Settings (more permissive for development)
MANUAL_APPROVE=false
SHOW_TOKEN=true

# Feature Toggles (some disabled for simpler development)
ENABLE_METRICS=false
ENABLE_HEALTH_CHECKS=true
ENABLE_VALIDATION=true
ENABLE_RATE_LIMITING=false
ENABLE_GRACEFUL_SHUTDOWN=false

# Rate Limiting Configuration (very lenient for development)
RATE_LIMIT_SECONDS=0.1
RATE_LIMIT_WAIT=false

# Performance Configuration
MAX_REQUEST_SIZE=10MB
REQUEST_TIMEOUT=60000
KEEPALIVE_TIMEOUT=5000

# Monitoring Configuration
METRICS_ENDPOINT=/metrics
HEALTH_ENDPOINT=/health